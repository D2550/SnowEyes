{
  "manifest_version": 3,

  "name": "网页敏感信息检测",
  "version": "1.0",
  "description": "网页信息检测工具",

  "permissions": [
    "activeTab",    
    "scripting",    
    "storage"       
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      
      "js": [
        "content/utils/logger.js",
        "content/config/scanner.config.js",
        "content/filters/scanner.filter.js",
        "content/content.js"
      ],
      
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_badge_text": "0",
    "default_badge_background_color": "#666666"
  }
} 